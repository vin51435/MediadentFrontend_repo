{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "comma-dangle": "off",
    "spaced-comment": "off",
    "arrow-parens": "off",
    "import/no-extraneous-dependencies": "off",
    "linebreak-style": "off",
    // "linebreak-style": ["error", "windows"],
    // "prettier/prettier": "error",
    "no-console": "warn",
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "req|res|next|val|err|^_" }
    ],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "allow",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@src", "./src"]],
        "extensions": [".js", ".jsx", ".json"]
      }
    }
  }
}
